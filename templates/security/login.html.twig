{% extends 'base.html.twig' %}

{% block body %}

    <h1>Connexion</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" name="_username" class="form-control" placeholder="Votre email ...">
        </div>
        <div class="form-group">
            <input type="password" name="_password" class="form-control" placeholder="mot de passe">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Connexion</button>
        </div>
    </form>

    {#}
    {% form_theme formSecurity 'bootstrap_4_layout.html.twig' %}
    {{ form_start(formSecurity) }}
    <div class="class-group">
        <label for="">Username</label>
        {{ form_row(formSecurity.username, { 'attr' : { 'placeholder' : "Username"}, 'label' : false }) }}
    </div>
    <div class="class-group">
        <label for="">Email</label>
        {{ form_row(formSecurity.email, { 'attr' : { 'placeholder' : "Votre email"}, 'label' : false }) }}
    </div>
    <div class="class-group">
        <label for="">Password</label>
        {{ form_row(formSecurity.password, { 'attr' : { 'placeholder' : "mot de passe"}, 'label' : false }) }}
    </div>
    <div class="class-group">
        <label for="">Confirm Password</label>
        {{ form_row(formSecurity.confirm_password, { 'attr' : { 'placeholder' : "Confirmer votre mot de passe"}, 'label' : false }) }}
    </div>
    <div class="class-group">
        <button type="submit" class="btn btn-primary">Inscription</button>
    </div>
    {{ form_end(formSecurity) }}

    <hr>
    {#
    {{ form(formArticle) }}
    #}
{% endblock %}